!!!
%html{lang: "en"}
  %head
    %meta{name: "viewport", content:"width=device-width, initial-scale=1.0"}
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Sign for Safe Streets
    = csrf_meta_tags

    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'

    = javascript_include_tag 'mixpanel', async: Rails.env.production?

    = javascript_include_tag 'fingerprintjs2', async: Rails.env.production?

    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload', defer: 'defer'

    = javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=#{Rails.application.secrets.google_places[:api_key]}&libraries=places&callback=onReviewPageLoad.initializeGooglePlaces", defer: 'defer'

    = javascript_include_tag 'typeahead', defer: 'defer'


  %body
    = render partial: 'layouts/site_header'
    = yield
    = render partial: 'layouts/footer', locals: {have_selected_campaigns: @selected_campaigns.present?}